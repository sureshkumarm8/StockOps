<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wood"
    android:fitsSystemWindows="true"
    tools:context=".view.BankNiftyActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/allNamesRV"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/border">

                        <RelativeLayout
                            android:id="@+id/allNamesRVin"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/wood">


                                <TextView
                                    android:id="@+id/tvNameTitleAll"
                                    android:layout_width="25dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toStartOf="@+id/tvTitleTotalBuyQuantityAll"
                                    android:layout_toLeftOf="@+id/tvTitleTotalBuyQuantityAll"
                                    android:background="@drawable/trading"
                                    android:gravity="center"
                                    android:text="Name"
                                    android:textColor="#08F4EC"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvTitleQuantityTradedAll"
                                    android:layout_width="95dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="@drawable/trading"
                                    android:gravity="center"
                                    android:hapticFeedbackEnabled="false"
                                    android:text="Volume in K"
                                    android:textColor="#08F4EC"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvpTitleTotalSellQuantityAll"
                                    android:layout_width="95dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toStartOf="@+id/tvTitleQuantityTradedAll"
                                    android:layout_toLeftOf="@+id/tvTitleQuantityTradedAll"
                                    android:background="@drawable/trading"
                                    android:gravity="center"
                                    android:text="Sell Qty in K"
                                    android:textColor="#08F4EC"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvTitleTotalBuyQuantityAll"
                                    android:layout_width="95dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toStartOf="@+id/tvpTitleTotalSellQuantityAll"
                                    android:layout_toLeftOf="@+id/tvpTitleTotalSellQuantityAll"
                                    android:background="@drawable/trading"
                                    android:gravity="center"
                                    android:text="BuyQty in K"
                                    android:textColor="#08F4EC"
                                    android:textSize="10sp" />

                        </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/allBanksTotalRV"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_below="@+id/allNamesRV"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border">

                        <RelativeLayout
                            android:id="@+id/allBanksTotalRVin"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="-2dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/wood">


                                <TextView
                                    android:id="@+id/tvBankNameAll"
                                    android:layout_width="25dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toStartOf="@+id/tvTotalBuyQuantityBankAll"
                                    android:layout_toLeftOf="@+id/tvTotalBuyQuantityBankAll"
                                    android:background="@android:color/holo_blue_light"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="BankName"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvQuantityTradedBankAll"
                                    android:layout_width="95dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="#009688"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:hapticFeedbackEnabled="false"
                                    android:text="QuantityTradedBank" />

                                <TextView
                                    android:id="@+id/tvpTotalSellQuantityBankAll"
                                    android:layout_width="95dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toStartOf="@+id/tvQuantityTradedBankAll"
                                    android:layout_toLeftOf="@+id/tvQuantityTradedBankAll"
                                    android:background="@android:color/holo_orange_dark"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="TotalSellQuantityBank" />

                                <TextView
                                    android:id="@+id/tvTotalBuyQuantityBankAll"
                                    android:layout_width="95dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_toStartOf="@+id/tvpTotalSellQuantityBankAll"
                                    android:layout_toLeftOf="@+id/tvpTotalSellQuantityBankAll"
                                    android:background="@android:color/holo_green_light"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="TotalBuyQuantityBank" />

                        </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBanks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/allBanksTotalRV"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:paddingVertical="20dp"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/navigation_menu_drawer"
            app:itemHorizontalPadding="40dp"
            app:itemIconPadding="30dp"
            app:itemIconSize="20dp"
            android:fitsSystemWindows="true"
            android:background="@android:color/background_dark"
            android:theme="@style/AppTheme"
            app:itemBackground="?attr/actionModeSplitBackground"
            app:itemTextAppearance="?android:attr/textAppearanceSmallInverse"/>

</androidx.drawerlayout.widget.DrawerLayout>