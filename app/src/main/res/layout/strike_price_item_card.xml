<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/border_header"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        app:cardCornerRadius="5dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutRV"
            android:background="@drawable/wood"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvStrikePrice2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/holo_blue_light"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="CP00000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvStrikePrice5"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_above="@+id/tvTotalBuyQuantityMain"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/tvVolumeCE2"
                android:layout_toRightOf="@+id/tvVolumeCE2"
                android:background="@drawable/trading"
                android:gravity="center"
                android:text="OI in K"
                android:textColor="#E605ABD5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvTotalBuyQuantityMain"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/tvVolumeCE"
                android:layout_toRightOf="@+id/tvVolumeCE"
                android:background="@android:color/holo_green_light"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="OI CE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvpTotalSellQuantityMain"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/tvTotalBuyQuantityMain"
                android:layout_toRightOf="@+id/tvTotalBuyQuantityMain"
                android:background="@android:color/holo_orange_dark"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="OI change %"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvStrikePrice3"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_above="@+id/tvpTotalSellQuantityMain"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/tvStrikePrice5"
                android:layout_toRightOf="@+id/tvStrikePrice5"
                android:background="@drawable/trading"
                android:gravity="center"
                android:text="OIC in %"
                android:textColor="#E605ABD5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvQuantityTradedMain"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/tvStrikePrice2"
                android:layout_toRightOf="@+id/tvStrikePrice2"
                android:background="@android:color/holo_green_light"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:text="BuyQuantity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvVolumeCE3"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_above="@+id/tvQuantityTradedMain"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/trading"
                android:gravity="center"
                android:text="BidQty in K"
                android:textColor="#E605ABD5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvDeliveryQtyMain"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/tvQuantityTradedMain"
                android:layout_toRightOf="@+id/tvQuantityTradedMain"
                android:background="@android:color/holo_orange_dark"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="SellQuantity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvVolumePE3"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_above="@+id/tvDeliveryQtyMain"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/tvVolumeCE3"
                android:layout_toRightOf="@+id/tvVolumeCE3"
                android:background="@drawable/trading"
                android:gravity="center"
                android:text="SellQty in K"
                android:textColor="#E605ABD5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvVolumeCE2"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_above="@+id/tvVolumeCE"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/tvVolumePE3"
                android:layout_toRightOf="@+id/tvVolumePE3"
                android:background="@drawable/trading"
                android:gravity="center"
                android:text="Volume in K"
                android:textColor="#E605ABD5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvVolumeCE"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/tvDeliveryQtyMain"
                android:layout_toRightOf="@+id/tvDeliveryQtyMain"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="VolumeCE"
                android:textSize="12sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>